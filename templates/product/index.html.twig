{% extends 'base.html.twig' %}

{% block title %}CART{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="col-sm-12">
        <h3>Product List</h3>
        <a href="{{ path('add') }}" class="btn btn-sm btn-primary">
                <i class="fa fa-edit" aria-hidden="true"></i> Add Product
        </a>
        <table class="table table-striped table-middle-aligned">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-center">Unit Price(LKR)</th>
                    <th scope="col" class="text-center">Qty</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    {{ form_start(form, {'action': path('add_to_cart'), 'method': 'POST'}) }}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ product.description }}</td>
                            <td class="text-center">{{ product.price|number_format(2, '.', ',') }}</td>
                            <td class="text-center"><input type="number" id="qty" name="qty" required="required"></td>
                            <td class="text-center">
                                <a href="{{ path('edit', {id: product.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Edit
                                </a>
                                <button type="submit" class="btn btn-sm btn-primary btn-success">
                                    <i class="fa fa-save" aria-hidden="true"></i> Add to cart
                                </button>
                                <a href="{{ path('delete', {id: product.id}) }}" class="btn btn-sm btn-danger">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Delete
                                </a>
                            </td>
                            <input type="hidden" id="prod_id" name="id" value="{{product.id}}">
                        </tr>
                    {{ form_end(form) }}
                {% endfor %}
            </tbody>
        </table>
        <h3>Cart</h3>
        <span>
            <a href="{{ path('delete_item', {id: 0,action: 'delete_all'}) }}" class="btn btn-sm btn-danger pull-right">
                <i class="fa fa-edit" aria-hidden="true"></i> Empty Cart
            </a>
        </span>
        <table class="table table-striped table-middle-aligned">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Product</th>
                    <th scope="col" class="text-center">Price(LKR)</th>
                    <th scope="col" class="text-center">Quantity</th>
                    <th scope="col" class="text-center">Total(LKR)</th>
                    <th scope="col" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                {% if cart is defined %}
                    {% set total = 0 %}
                    {% for cartItem in cart %}
                        <tr>
                            <td>{{cartItem.prod_name}}</td>
                            <td class="text-center">{{cartItem.unit_price|number_format(2, '.', ',')}}</td>
                            <td class="text-center">{{cartItem.prod_qty}}</td>
                            <td class="text-center">{{cartItem.item_total|number_format(2, '.', ',')}}</td>
                            <td>
                                <a href="{{ path('delete_item', {id: cartItem.prod_id,action: 'delete_item'}) }}" class="btn btn-sm btn-danger">
                                <i class="fa fa-edit" aria-hidden="true"></i> X
                            </a>
                            </td>
                        </tr>
                        {% set total = total + cartItem.item_total %}
                    {% endfor %}
                    <tr>
                        <td colSpan="3">Total</td>
                        <td class="text-center">{{ total|number_format(2, '.', ',') }}</td>
                        <td></td>
                    </tr>
                    <tr>
                    <td colSpan="5"> 
                        <a href="{{ path('checkout')}}" class="btn btn-sm btn-primary">
                            Checkout
                        </a>
                    </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        <h3>Orders</h3>
        <table class="table table-striped table-middle-aligned">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Order id</th>
                    <th scope="col" class="text-center">Status</th>
                    <th scope="col" class="text-center">Date</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% if orders is defined %}
                    {% set total = 0 %}
                    {% for order in orders %}
                        <tr>
                            <td class="text-center">{{order.id}}</td>
                            <td class="text-center">{{ order.status == "A" ? "Active" : "Inactive" }}</td>
                            <td class="text-center">{{order.date|date("m/d/Y")}}</td>
                            <td>
                                <a href="{{ path('detail',{id:order.id})}}" class="btn btn-sm btn-primary">
                                    More
                                </a>
                            </td>
                        </tr>
                     
                    {% endfor %}
                   
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
